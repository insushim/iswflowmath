rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자는 자신의 데이터만 읽기/쓰기 가능
    // 아이디 찾기: 이름으로 검색 시 이메일 필드만 읽기 허용 (인증 없이)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      // 아이디 찾기용 - 이름 필드로 쿼리 시 허용
      allow list: if request.query.limit <= 1
                  && 'name' in request.query.filters;
    }

    // 학습 세션
    match /sessions/{sessionId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 문제 시도 기록
    match /attempts/{attemptId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // 일별 통계
    match /dailyStats/{statsId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 업적
    match /achievements/{achievementId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // 학습 기록 (레거시)
    match /learning_records/{recordId} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
    }

    // 문제 기록 (레거시)
    match /problem_records/{recordId} {
      allow read, write: if request.auth != null;
    }
  }
}
